<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvUserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btnDownloadUserData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:text="@string/download_user_data"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/tvUserMessage"
            app:layout_constraintHorizontal_bias="0.412"
            app:layout_constraintStart_toStartOf="@+id/tvUserMessage"
            app:layout_constraintTop_toBottomOf="@+id/tvUserMessage" />

    <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btnCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Count" />

    <Button
            android:id="@+id/btnCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="244dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:text="@string/click_here"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tvCount"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/btnStockCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="getStockCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDownloadUserData" />

    <TextView
            android:id="@+id/tvStockCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="parallel decomposition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnStockCount"
           app:layout_constraintTop_toTopOf="@+id/btnStockCount"
            app:layout_constraintBottom_toBottomOf="@id/btnStockCount"/>

    <Button
            android:id="@+id/btnGetCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getUpdatedCount"
            app:layout_constraintTop_toBottomOf="@id/btnStockCount"
            app:layout_constraintStart_toStartOf="@id/btnStockCount"
             />

    <TextView
            android:id="@+id/tvUpdatedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnStructuredUpdatedCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnGetCount"
            app:layout_constraintTop_toTopOf="@+id/btnGetCount"
            app:layout_constraintBottom_toBottomOf="@id/btnGetCount" />

    <Button
            android:id="@+id/btnGetCount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getUpdatedCount"
            app:layout_constraintTop_toBottomOf="@id/btnGetCount"
            app:layout_constraintStart_toStartOf="@id/btnStockCount"
            />

    <TextView
            android:id="@+id/tvUpdatedCount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StructuredUpdatedCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnGetCount1"
            app:layout_constraintTop_toTopOf="@+id/btnGetCount1"
            app:layout_constraintBottom_toBottomOf="@id/btnGetCount1" />

</androidx.constraintlayout.widget.ConstraintLayout>